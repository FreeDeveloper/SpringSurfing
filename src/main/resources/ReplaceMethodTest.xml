<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

    <bean id="company" class="cn.smile.spring.container.bean.replaceMethod.Company">
        <replaced-method name="pay" replacer="companyPayReplacer"/>
    </bean>

    <bean id="companyPayReplacer" class="cn.smile.spring.container.bean.replaceMethod.CompanyPayReplacer"/>

</beans>
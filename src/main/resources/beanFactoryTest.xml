<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

    <bean id="myTestBean" class="cn.smile.spring.container.bean.testInit.MyTestBean">
        <property name="testStr" value="你属猪"></property>
    </bean>

    <bean id="person" class="cn.smile.spring.container.bean.testInit.Person">
        <constructor-arg index="0" type="int">
            <value>19</value>
        </constructor-arg>

        <constructor-arg index="1" type="java.lang.String">
            <value>张三</value>
        </constructor-arg>

        <constructor-arg name="myTestBean" ref="myTestBean"/>
    </bean>

</beans>